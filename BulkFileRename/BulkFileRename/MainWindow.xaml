<Window x:Class="BulkFileRename.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="235*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnOpenDir" Content="Open..." HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="75" Click="btnOpenDir_Click"/>
        <Label x:Name="labelDirectory" Content="Current Directory" HorizontalAlignment="Left" Margin="90,25,0,0" VerticalAlignment="Top" Width="417"/>
        
        <DataGrid x:Name="DataGridFileNameList" HorizontalAlignment="Left" Margin="10,94,0,0" Grid.Row="1" VerticalAlignment="Top" Height="85" Width="497" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Original File Name" Width="Auto" IsReadOnly="False" Binding="{Binding originFileName}"/>       
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
